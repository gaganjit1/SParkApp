<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.sjsu.ten.sparkapp.NavigationFragment"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:text="Floor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="65dp"
                android:id="@+id/floorword"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/textView"
                android:layout_alignStart="@+id/textView"
                android:textColor="#FFFFFF"/>

            <TextView
                android:text="@string/determining_location"
                android:id="@+id/LocationText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:textAlignment="center"
                android:lines="2"
                android:textColor="#FFFFFF" />

            <TextView
                android:text="@string/next_parking_heading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#FFFFFF"
                android:id="@+id/textView"
                android:layout_marginTop="100dp"
                android:layout_below="@+id/LocationText"
                android:layout_centerHorizontal="true" />


            <TextView
                android:text="@string/title_navigation"
                android:id="@+id/section_label"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:layout_below="@+id/ParkedSpot"
                android:layout_marginTop="110dp"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/floortext"
                android:layout_alignBaseline="@+id/floorword"
                android:layout_alignBottom="@+id/floorword"
                android:layout_alignEnd="@+id/textView"
                android:layout_marginEnd="65dp"
                android:layout_marginTop="20dp"
                android:text="- -"
                android:textColor="#FFFFFF"/>

            <TextView
                android:text="--"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#FFFFFF"
                android:id="@+id/ParkedSpot"
                android:gravity="center"
                android:textSize="125dp"
                android:layout_marginTop="12dp"
                android:layout_below="@+id/floorword"
                android:layout_centerHorizontal="true" />


        </RelativeLayout>
    </ScrollView>

</RelativeLayout>
